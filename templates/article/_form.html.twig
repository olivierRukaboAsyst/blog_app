{{ form_start(form) }}
    {% if title is defined %}
        <h2 class="title">{{title}}</h2>
    {% endif %}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
        <div class="flex gap-5">
            <div class="">
                {% if required is defined %}
                    {{ form_row(form.imageFile,{attr:{required: required}}) }}
                {% else %}
                    {{ form_row(form.imageFile) }}
                {% endif %}
            </div>
            <div class="image-preview">
                {% if not article.imageUrl == "" %}
                    <img src="{{article.imageUrl}}" alt="Image de l'Article: {{article.title}}">
                {% endif %}
            </div>

        </div>
    {{ form_row(form.categories) }}
    
    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    
{{ form_end(form) }}
